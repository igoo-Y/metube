<!DOCTYPE html>
<html>
  <head>
    <title>Metube</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%#= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar">
      <a href="/" class="navbar-brand">
        <span style="font-size: 1em; color: red; margin-right: 2px; padding-left: 13px">
          <i class="fab fa-youtube"></i>
        </span>
        METUBE
      </a>

      <%= form_tag root_path, method: :get, class: "form-inline" do %>
        <%= text_field_tag :q, params[:q], class: "form-control" %>
        <%= submit_tag "검색", class: "btn btn-danger" %>
      <% end %>

      <div style="margin-right: 15px;">
        <%if current_user %>
          <%= link_to "업로드", new_video_path, class: "btn btn-danger" %>
          <%= link_to '로그아웃', destroy_user_session_path, method: :delete, class: "btn btn-outline-danger" %>
        <%else %>
          <%=link_to '로그인', user_session_path, class: "btn btn-outline-danger" %>
          <%=link_to '회원가입', new_user_registration_path, class: "btn btn-outline-danger" %>
        <%end %>
      </div>
    </nav>

    <div class="container-fluid">
      <div class="card">
        <div class="card-body">
          <%= yield %>
        </div>
      </div>
    </div>


  </body>
</html>
